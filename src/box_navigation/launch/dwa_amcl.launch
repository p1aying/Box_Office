<?xml version="1.0"?>
<launch>
  <!-- AMCL 노드 -->
  <node pkg="amcl" type="amcl" name="amcl" output="screen">
    <!-- 좌표계 설정 -->
    <param name="use_map_topic" value="true"/>
    <param name="odom_frame_id" value="odom"/>
    <param name="base_frame_id" value="base_link"/>
    <param name="global_frame_id" value="map"/>
    
    <!-- TF 발행 명시적 설정 -->
    <param name="tf_broadcast" value="true"/>
    
    <!-- 초기 위치 설정 -->
    <param name="initial_pose_x" value="0.0"/>
    <param name="initial_pose_y" value="0.0"/>
    <param name="initial_pose_a" value="0.0"/>
    <param name="initial_cov_xx" value="0.5"/>
    <param name="initial_cov_yy" value="0.5"/>
    <param name="initial_cov_aa" value="0.1"/>
    
    <!-- 업데이트 조건 - 더 자주 업데이트하도록 설정 -->
    <param name="update_min_d" value="0.1"/>  
    <param name="update_min_a" value="0.1"/>  
    <param name="recovery_alpha_slow" value="0.001"/>  
    <param name="recovery_alpha_fast" value="0.1"/>    
        
    <!-- 파티클 필터 설정 -->
    <param name="min_particles" value="100"/>
    <param name="max_particles" value="300"/>
    <param name="kld_err" value="0.05"/>
    <param name="kld_z" value="0.99"/>
    <param name="recovery_alpha_slow" value="0.001"/>
    <param name="recovery_alpha_fast" value="0.1"/>
    
    <!-- 레이저 모델 파라미터 -->
    <param name="laser_max_beams" value="100"/>
    <param name="laser_model_type" value="likelihood_field"/>
    <param name="laser_likelihood_max_dist" value="2.0"/>
    <param name="laser_z_hit" value="0.95"/>
    <param name="laser_z_rand" value="0.05"/>
    
    <!-- 레이저 스캔 토픽 지정 -->
    <remap from="scan" to="scan"/>
    
    <!-- 오도메트리 설정 -->
    <param name="odom_model_type" value="diff"/>
    <param name="odom_alpha1" value="0.2"/>
    <param name="odom_alpha2" value="0.2"/>
    <param name="odom_alpha3" value="0.2"/>
    <param name="odom_alpha4" value="0.2"/>
    
    <!-- TF 타임아웃 증가 (중요) -->
    <param name="transform_tolerance" value="0.8"/>
    <param name="gui_publish_rate" value="5.0"/>
  </node>
</launch>