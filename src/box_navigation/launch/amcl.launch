<launch>
  <!-- AMCL 노드 -->
  <node pkg="amcl" type="amcl" name="amcl" output="screen">
    <!-- 좌표계 설정 -->
    <param name="use_map_topic" value="true"/>
    <param name="odom_frame_id" value="odom"/>
    <param name="base_frame_id" value="base_link"/>
    <param name="global_frame_id" value="map"/>
    
    <!-- TF 발행 명시적 설정 (추가) -->
    <param name="tf_broadcast" value="true"/>
    
    <!-- 초기 위치 설정 -->
    <param name="initial_pose_x" value="0.0"/>
    <param name="initial_pose_y" value="0.0"/>
    <param name="initial_pose_a" value="0.0"/>
    <param name="initial_cov_xx" value="0.5"/>  <!-- 추가 -->
    <param name="initial_cov_yy" value="0.5"/>  <!-- 추가 -->
    <param name="initial_cov_aa" value="0.1"/>  <!-- 추가 -->
    
    <!-- 업데이트 조건 -->
    <param name="update_min_d" value="0.05"/>  <!-- 0.2에서 감소 -->
    <param name="update_min_a" value="0.05"/>  <!-- 0.3에서 감소 -->
    
    <!-- 파티클 필터 설정 -->
    <param name="min_particles" value="100"/>  <!-- 100에서 증가 -->
    <param name="max_particles" value="1000"/>  <!-- 1000에서 증가 -->
    <param name="kld_err" value="0.05"/>
    <param name="kld_z" value="0.99"/>
    <param name="recovery_alpha_slow" value="0.001"/>  <!-- 0.0에서 변경 -->
    <param name="recovery_alpha_fast" value="0.1"/>  <!-- 0.0에서 변경 -->
    
    <!-- 레이저 모델 파라미터 -->
    <param name="laser_max_beams" value="100"/>
    <param name="laser_model_type" value="likelihood_field"/>
    <param name="laser_likelihood_max_dist" value="2.0"/>
    <param name="laser_z_hit" value="0.95"/>
    <param name="laser_z_rand" value="0.05"/>
    
    <!-- 레이저 스캔 토픽 지정 (추가) -->
    <remap from="scan" to="scan"/>
    
    <!-- 오도메트리 설정 -->
    <param name="odom_model_type" value="diff-corrected"/>
    <param name="odom_alpha1" value="0.2"/>
    <param name="odom_alpha2" value="0.2"/>
    <param name="odom_alpha3" value="0.2"/>
    <param name="odom_alpha4" value="0.2"/>
    
    <!-- Jetson Nano 최적화 -->
    <param name="resample_interval" value="1"/>  <!-- 2에서 감소 -->
    <param name="transform_tolerance" value="0.3"/>  <!-- 0.5에서 증가 -->
    <param name="gui_publish_rate" value="5.0"/>  <!-- 1.0에서 증가 -->
  </node>
</launch>